<Window x:Class="Validator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EDTF Validator" Height="350" Width="525" Background="White">
    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Name="inputBox"
                 FontSize="16"
                 VerticalContentAlignment="Center"
                 Grid.Row="1"/>
        <Button Grid.Column="1"
                Grid.Row="1"
                Content="Validate"
                Width="60"
                Click="Button_Click" />
        <TextBlock Grid.Row="2"
                   Margin="0,5,0,0"
                   Grid.ColumnSpan="2"
                   FontWeight="SemiBold"
                   FontSize="14"
                   Name="errorMessage" />
    </Grid>
</Window>
